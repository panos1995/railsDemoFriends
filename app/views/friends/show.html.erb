


<div class="jumbotron">
  <h1 class="display-4"> <%= @friend.last_name %>
                          <%= @friend.first_name %>
  </h1>
  <p class="lead"> <%= @friend.email %> | <%= @friend.phone %> |  <%= @friend.twitter %> </p>
  <hr class="my-4">
  
   <br><br>
   <p class="lead">
<%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" %>
<%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-outline-danger btn-sm"%> 
<%= link_to 'Back', friends_path, class:"btn btn-dark" %></p>

  
</div>


